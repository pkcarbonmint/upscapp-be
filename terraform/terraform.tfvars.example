# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "study-planner"
environment  = "production"
aws_region   = "ap-south-1"

# Domain Configuration (for SSL certificate)
domain_name     = "your-domain.com"  # Replace with your actual domain
route53_zone_id = "Z1234567890ABC"   # Replace with your Route53 hosted zone ID

# SSL Certificate Configuration
enable_https = true
# certificate_arn = ""  # Leave empty if using domain_name (ACM will create certificate)

# RDS Configuration
enable_rds = true
rds_allocated_storage = 20
rds_instance_class = "db.t3.micro"
rds_database_name = "app"
rds_username = "app"
rds_password = "your-secure-password"  # Use a secure password

# EC2 Configuration
enable_ec2_instances = true
docker_instance_type = "t3.medium"
strapi_instance_type = "t3.small"

# GitHub Integration (optional)
github_repository_url = "https://github.com/your-username/your-repo"
github_branch = "main"
github_token = "your-github-token"  # For private repos
enable_auto_deploy = false
webhook_secret = "your-webhook-secret"

# ALB Configuration
alb_deletion_protection = false

# Docker Configuration
app_image_tag = "latest"
frontend_image_tag = "latest"
helios_image_tag = "latest"