# Copy this file to terraform.tfvars and update the values

# REQUIRED: DigitalOcean Personal Access Token
do_token = "your-digitalocean-token-here"

# Basic Configuration
do_region    = "nyc3"  # Available: nyc1, nyc3, ams3, sfo3, sgp1, lon1, fra1, tor1, blr1, syd1
environment  = "production"
project_name = "upscpro"

# Deployment Strategy (choose one)
use_app_platform = true   # Recommended: Fully managed PaaS
use_droplets     = false  # Alternative: More control, requires more management

# Database Configuration
enable_database = true
database_size   = "db-s-1vcpu-1gb"  # $15/month - upgrade to db-s-1vcpu-2gb for $30/month
database_name     = "app"
database_username = "app"

# Redis Configuration  
enable_redis = true
redis_size   = "db-s-1vcpu-1gb"  # $15/month

# App Platform Instance Sizes (if using App Platform)
# basic-xxs: $5/month  (0.5 vCPU, 0.5GB RAM)
# basic-xs:  $12/month (1 vCPU, 1GB RAM)  
# basic-s:   $24/month (1 vCPU, 2GB RAM)
app_instance_size    = "basic-xxs"
helios_instance_size = "basic-xxs"
celery_instance_size = "basic-xxs"

# Instance Counts
app_instance_count    = 1
helios_instance_count = 1
celery_instance_count = 1

# Droplet Configuration (if using droplets instead of App Platform)
# droplet_size = "s-1vcpu-1gb"    # $6/month
# droplet_size = "s-1vcpu-2gb"    # $12/month
# droplet_size = "s-2vcpu-2gb"    # $18/month
droplet_count = 1
droplet_size  = "s-1vcpu-1gb"

# SSH Keys (required for droplet access - get ID from DO dashboard)
# ssh_key_ids = ["12345678"]

# Load Balancer
load_balancer_size = "lb-small"  # $12/month

# Container Registry
registry_tier = "starter"  # Free tier

# Optional: Custom Domain
# custom_domain = "your-domain.com"
# ssl_certificate_name = "your-ssl-cert"

# Optional: GitHub Integration (for App Platform)
# github_repo = "your-username/your-repo"
# github_branch = "main"
# auto_deploy_on_push = true

# Optional: Environment Variables
# app_environment_variables = {
#   ENVIRONMENT = "production"
#   CORS_ORIGINS = "[\"https://your-domain.com\"]"
# }

# Cost Optimization
enable_auto_scaling = false
min_instance_count  = 1
max_instance_count  = 3

# Security
enable_firewall = true
# ssh_allowed_ips = ["your-ip-address/32"]  # Restrict SSH access to your IP