{
  "name": "plan-editor-library",
  "version": "1.0.0",
  "description": "A reusable React library for editing UPSC study plans with drag-and-drop functionality",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm type-check && vite build",
    "dev": "vite",
    "preview": "vite preview",
