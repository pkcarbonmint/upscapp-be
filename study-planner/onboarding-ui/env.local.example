# Development Environment Configuration
# Copy this file to .env.local for local development

# Google Analytics Configuration
# Get your Measurement ID from Google Analytics 4 dashboard
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Theme Configuration
# Default theme variant for A/B/C testing
# Options: A (Classic), B (Modern), C (Premium)
VITE_STYLE_VARIANT=B

# Feature Flags
VITE_SHOW_START_DATE=false
VITE_USE_SIMPLE_FORM=true
VITE_ENABLE_OTP=true
VITE_USE_FIREBASE_OTP=false

# Development
# Set to true to enable analytics in development
VITE_ENABLE_ANALYTICS_DEV=false

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_HELIOS_BASE_URL=http://localhost:8000/helios

# Development Mode
VITE_DEV_MODE=true
