{
  "name": "onboarding-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "check-types": "pnpm tsc --noEmit",
    "dev:hmr": "vite --host 0.0.0.0 --port 5173",
    "dev:debug": "vite --config vite.debug.config.ts --open debug.html",
    "build": "tsc -b && vite build",
    "build:debug": "tsc -b && vite build --config vite.debug.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "setup:dev": "cp env.local.example .env.local",
    "docker:backend": "cd .. && docker-compose up app app_db helios app_redis",
    "start:dev": "./start-dev.sh",
    "type-check": "pnpm tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@tailwindcss/postcss": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "docx": "^9.5.1",
    "firebase": "^12.3.0",
    "helios-ts": "workspace:*",
    "helios-scheduler": "workspace:*",
    "shared-ui-library": "workspace:*",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "shadcn-ui": "^0.9.5",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6"
  }
}
